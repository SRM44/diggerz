<div class="connexion-container">
  <div>
    <h2>Renvoyer les instructions de confirmation</h2>

    <% user = current_user || resource %>

    <%= simple_form_for(user, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>
      <%= f.full_error :confirmation_token %>

      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    value: user.pending_reconfirmation? ? user.unconfirmed_email : user.email,
                    input_html: { autocomplete: "email" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Renvoyer les instructions de confirmation" %>
      </div>
    <% end %>
  </div>
</div>
