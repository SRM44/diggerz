<div class="connexion-container">
  <div class="connexion-content">
    <div class="connexion-content-wrapper">
      <div class="connexion-menu">
        <div>
          <%= image_tag "logo_diggerz_icon.png", height: 70 %>
        </div>
        <div class="connexion-menu-links">
          <div>
            <%= link_to "Connexion", new_session_path(resource_name), id: "disabled-link" %>
          </div>
          <div>
            <%= link_to "Inscription", new_registration_path(resource_name), id: "disabled-link" %>
          </div>
        </div>
      </div>
      <div class="connexion-form">
        <div id="connexion-form--registration-header">
          <h1>Connexion</h1>
          <h3>Salut toi, on se conna√Æt non ? </h3>

          [ORIGINAL DESIGN]
          <button class="rounded-lined-btn">Connexion avec Discogs</button>

          [AFTER PLUG WITH BACKEND]
          <% if devise_mapping.omniauthable? %>
            <% resource_class.omniauth_providers.each do |provider| %>
              <form action="<%= omniauth_authorize_path(resource_name, provider) %>" method="POST">
                <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

                <input type="submit" value="Connexion avec Discogs">
              </form>
            <% end %>
          <% end %>
        </div>
        <div class="connexion-separator">
          <div id="connexion-separator-border"></div>
          <div>ou</div>
          <div id="connexion-separator-border"></div>
        </div>


        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          [ORIGINAL DESIGN]
          <div>
              <input type="text" id="email" placeholder="Email">
          </div>
          <div>
              <input type="text" id="password" placeholder="Mot de passe">
          </div>

          [AFTER PLUG WITH BACKEND]

          <div>
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
          </div>
          <div>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
          </div>
          <div style="display: flex">
            <%= f.input :remember_me, label: false, as: :boolean if devise_mapping.rememberable? %>
            <%= f.label :remember_me, "Se souvenir de moi" %>
          </div>

          <div class="connexion-form-ctas">
            <%= f.button :submit, "Go !", class: 'button-master', id: 'connexion-cta-btn' %>
            <div id="connexion-cta-forgot">
              <%= link_to "J'ai perdu mon mot de passe.", new_password_path(resource_name), id: "disabled-link" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="connexion-image">
  </div>
</div>
