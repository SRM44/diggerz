<div class="connexion-container">

  <div class="connexion-content">

    <div class="connexion-content-wrapper">
    
      <div class="connexion-menu">
           <%= link_to image_tag("logo_diggerz_icon.png", height: 50), root_path %>
        <div class="connexion-menu-links">
          <div>
            <%= link_to "Connexion", new_session_path(resource_name), class: 'active' %>
          </div>
          <div>
            <%= link_to "Inscription", new_registration_path(resource_name), class: "disabled-link" %>
          </div>
        </div>
      </div>
      <div class="connexion-form-container">
        <div id="connexion-form--registration-header">
          <h1>Connexion</h1>
          <h3>Salut toi, on se conna√Æt non ? </h3>
          <!-- <% if devise_mapping.omniauthable? %>
            <% resource_class.omniauth_providers.each do |provider| %>
              <form  action="<%= omniauth_authorize_path(resource_name, provider) %>" method="POST">
                <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
                <%# <%= link_to image_tag("discogs-vinyl-record-mark.png") %>
                <input class="rounded-lined-btn" type="submit" value="Connexion avec Discogs">
              </form>
            <% end %>
          <% end %> -->
        </div>
        <!-- <hr class="divider">
        </hr> -->


        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <div class="form-field">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        placeholder: 'Email',
                        label:false,
                        input_html: { autocomplete: "email", id: "data-saver" } %>
          </div>
          <div class="form-field">
            <%= f.input :password,
                        required: false,
                        placeholder: 'Mot de passe',
                        label:false,
                        input_html: { autocomplete: "current-password" } %>
          </div>

          <div class="connexion-password">
            <div style="display: flex">
              <%= f.input :remember_me, label: false, as: :boolean if devise_mapping.rememberable? %>
              <%= f.label :remember_me, "Se souvenir de moi" %>
            </div>
            <div id="connexion-cta-forgot">
              <%= link_to "Oups ! J'ai perdu mon mot de passe.", new_password_path(resource_name), id: "disabled-link" %>
            </div>
          </div>

          <div class="registration-form-ctas">
            <%= f.button :submit, "Continuer", class: 'button-master'%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="connexion-image">
  </div>
</div>
