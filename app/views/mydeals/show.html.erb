<div class="container-deal col">

<% if current_user == @asked_record.user %>

  <div class="md-show-card-back-button">
    <%= link_to "< Mes deals", mydeals_path(anchor: 'tovalidate')  %>
  </div>

  <div class="md-show-card">
    <img class="md-show-album" style="background-image: linear-gradient(rgba(0,0,0,0.1),rgba(0,0,0,0.1)), url('<%= record_cover(@proposed_record) %>')">
    <div class="md-show-requester-img">
      <span><%= @proposed_record.user.name %> vous propose</span>
      <img src="<%= cl_image_path @proposed_record.user.avatar %>">
    </div>
    <div class="md-show-album-infos">
      <h3> <%= @proposed_record.release.title %> </h3>
      <p> <%= @proposed_record.release.artist %> </p>
      <span> <%= @proposed_record.release.year %> - <%= @proposed_record.release.genre.name %></span>
    </div>
  </div>

  <div class="md-show-card-proposed">
    <img class="md-show-album" style="background-image: linear-gradient(rgba(0,0,0,0.1),rgba(0,0,0,0.1)), url('<%= record_cover(@asked_record) %>')">
    <div class="md-show-album-infos">
      <p>En échange de :</p>
      <h5><%= @asked_record.release.title %></h5>
      <p><%= @asked_record.release.artist %></p>
    </div>
  </div>

  <div class="md-show-actions-btn">
      <%= link_to accept_deal_path(@deal), method: :patch do %>
      <div class="button-master md-show-accept">
        Accepter l'échange
      </div>
      <% end %>
      <%= link_to accept_deal_path(@deal), method: :patch do %>
      <div class="button-secondary md-show-decline">
        Nope !
      </div>
      <% end %>
  </div>

<% elsif current_user == @proposed_record.user %>
  <div class="md-show-card-back-button">
    <%= link_to "< Mes deals", mydeals_path(anchor: 'pending')  %>
  </div>
<div class="md-show-card">
    <img class="md-show-album" style="background-image: linear-gradient(rgba(0,0,0,0.1),rgba(0,0,0,0.1)), url('<%= record_cover(@asked_record) %>')">
    <div class="md-show-requester-img">
      <span><%= @asked_record.user.name %> vous propose</span>
      <img src="<%= cl_image_path @asked_record.user.avatar %>">
    </div>
    <div class="md-show-album-infos">
      <h3> <%= @asked_record.release.title %> </h3>
      <p> <%= @asked_record.release.artist %> </p>
      <span> <%= @asked_record.release.year %> - <%= @asked_record.release.genre.name %></span>
    </div>
  </div>

  <div class="md-show-card-proposed">
    <img class="md-show-album" style="background-image: linear-gradient(rgba(0,0,0,0.1),rgba(0,0,0,0.1)), url('<%= record_cover(@proposed_record) %>')">
    <div class="md-show-album-infos">
      <p>En échange de :</p>
      <h5><%= @proposed_record.release.title %></h5>
      <p><%= @proposed_record.release.artist %></p>
    </div>
  </div>

  <div>
    <div class="md-requester-waiting">
      <p>En attente de réponse</p>
    </div>
  </div>

<% current_user == @accepted_deal %>
  <div>YOOOOOOOOOOOOOooo</div>
<% else %>
<% end %>

</div>
