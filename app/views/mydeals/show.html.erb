<div class="deal-maker-container">
  <div class="deal-wrapper">
    <div class="deal-maker-container" id="validated-deal">

      <%= render "mydeals/components/show/header/base" do %>
        <%= render "mydeals/components/show/header/title/#{@deal.status}" %>
      <% end %>

      <% if @current_user_received_deal %>
        <%= render "mydeals/components/show/with_user_context/#{@deal.status}/receiver/exchange_target_record",
                   record: @proposed_record %>
        <%= render 'mydeals/components/show/in_exchange_of_record',
                   record: @asked_record %>
        <%= render "mydeals/components/show/with_user_context/#{@deal.status}/receiver/actions",
                   deal: @deal %>
      <% else %>
        <%= render "mydeals/components/show/with_user_context/#{@deal.status}/requester/exchange_target_record",
                   record: @asked_record %>
        <%= render 'mydeals/components/show/in_exchange_of_record',
                   record: @proposed_record %>
        <%= render "mydeals/components/show/with_user_context/#{@deal.status}/requester/actions",
                   deal: @deal %>
      <% end %>

    </div>
  </div>
</div>
