<%= simple_form_for(@release) do |f| %>

  <%= f.input :title,
  placeholder: 'Album',
  label:false %>

  <%= f.input :artist,
  placeholder: 'Artiste(s)',
  label:false %>
  <%# f.input :artist, collection: Release.pluck(:artist) %>

  <%= f.input :label,
  placeholder: 'Label',
  label:false %>
  <%# f.input :label, collection: Release.pluck(:label) %>

  <%= f.input :year,
  collection: Release::Year.available,
  prompt: 'Date de sortie',
  label:false
   %>
  <%= f.association :genre,
  prompt: 'Genre',
  label:false %>

  <div>
  <%= f.input :pictures,
  as: :file,
  input_html: { multiple: true } %>
  </div>

  <h3>Tracks</h3>
  <div class="fields">
    <%= link_to_add_row('Add Track', f, :tracks, class: 'btn btn-primary') %>
    <%= f.simple_fields_for :tracks do |builder| %>
      <%= render 'track', f: builder %>
    <% end %>
  </div>

  <h3>My disk data</h3>
  <div class="form-group string optional record_condition">
    <label class="form-control-label string optional" for="record_condition">Dans quel état est votre disque ?</label><input class="form-control string optional" type="text" name="record[condition]" id="record_condition" placeholder="Plutôt bon état">
  </div>

  <%= f.submit 'Ajouter mon disque' %>
<% end %>
