<%= simple_form_for(@release) do |f| %>

  <div>
  <%= f.input :pictures,
  label:false,
  as: :file,
  input_html: { multiple: true } %>
  </div>

  <div class="form-field">
  <%= f.input :title,
  placeholder: 'Album',
  label:false %>
  </div>

  <div class="form-field">
  <%= f.input :artist,
  placeholder: 'Artiste(s)',
  label:false %>
  <%# f.input :artist, collection: Release.pluck(:artist) %>
  </div>

  <div class="form-field">
  <%= f.input :label,
  placeholder: 'Label',
  label:false %>
  <%# f.input :label, collection: Release.pluck(:label) %>
  </div>

  <div class="form-field-group">

    <div class="form-field">
     <%= f.input :year,
      collection: Release::Year.available,
      prompt: 'Date de sortie',
      label:false %>
    </div>

    <div class="form-field">
      <%= f.association :genre,
      prompt: 'Genre',
      label:false %>
    </div>
  </div>

  <div class="form-group string optional record_condition form-field">
    <input class="form-control string optional" type="text" name="record[condition]" id="record_condition" placeholder="Dans quel Ã©tat est ton disque ?">
  </div>

  <input type="text" name="return_url" value="<%= params[:return_url] %>" class="hidden">

<%#   <h3>Tracklist</h3>
  <div class="fields">
    <%= link_to_add_row('Add Track', f, :tracks, class: 'btn btn-primary') >
    <%= f.simple_fields_for :tracks do |builder| >
      <%= render 'track', f: builder >
    <% end >
  </div> %>


  <%= f.submit 'Ajouter mon disque',
   class: "button-master" %>
<% end %>
