<div class="mydeals-container">
  <div id="desktop-center">
    <h1 id="mydeals-header"> Mise à jour</h1>
    <div class="profil-content-wrapper">
      <%= simple_form_for current_user, url: profile_path do |f| %>
        <div class="profil-content-inputs">
            <%= f.input :username, 
                              label:false,
                              autofocus: true,
                              required: true,
                              input_html: { class: 'profil-input'},
                              placeholder: "Nom d'utilisateur*"  %>

            <%= f.input :email, 
                              label:false,
                              autofocus: true,
                              required: true,
                              input_html: {class: 'profil-input' },
                              placeholder: 'Email*'  %>

            <%= f.input :phone_number,
                              label:false,
                              autofocus: true,
                              input_html: {class: 'profil-input' },
                              placeholder: 'Téléphone'  %>

            <%= f.button :submit, 'Mettre à jour', class: 'button-master' %>

        </div>
      <% end %>
    </div>
  </div>
</div>